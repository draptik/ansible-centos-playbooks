#!/bin/bash

# === Usage Check ===
if [[ -z "$1" ]]; then
  echo "Usage: $0 <backup-target-name>"
  echo "Example: $0 readeck"
  exit 1
fi

TARGET="$1"
# ==== Configuration ====
LOCAL_REPO="/volume1/backup/restic-${TARGET}"                 # path to local/NAS Restic repo
PCLOUD_REPO="rclone:pcloud:backups/restic-${TARGET}"          # pCloud repo via rclone
RESTIC_PASSWORD_FILE="$HOME/restic/restic-password-${TARGET}" # same password used in both repos
LOG_FILE="$HOME/restic-logs/restic-${TARGET}.log"

# ==== Pre-flight checks ====
if ! command -v restic >/dev/null; then
  echo "âŒ Error: restic is not installed." | tee -a "$LOG_FILE"
  exit 1
fi

if [[ ! -f "$RESTIC_PASSWORD_FILE" ]]; then
  echo "âŒ Error: Password file not found at $RESTIC_PASSWORD_FILE" | tee -a "$LOG_FILE"
  exit 1
fi

# ==== Export env ====
export RESTIC_PASSWORD_FILE="$RESTIC_PASSWORD_FILE"
export RESTIC_FROM_PASSWORD_FILE="$RESTIC_PASSWORD_FILE"

# ==== Ensure target repo exists ====
echo "ðŸ” Checking if target Restic repo at $PCLOUD_REPO exists..." | tee -a "$LOG_FILE"
if ! restic -r "$PCLOUD_REPO" snapshots >/dev/null 2>&1; then
  echo "âš ï¸  Target repo not found. Initializing..." | tee -a "$LOG_FILE"
  if restic -r "$PCLOUD_REPO" init >>"$LOG_FILE" 2>&1; then
    echo "âœ… Initialized new Restic repo at $PCLOUD_REPO." | tee -a "$LOG_FILE"
  else
    echo "âŒ Failed to initialize target repo. Aborting." | tee -a "$LOG_FILE"
    exit 2
  fi
else
  echo "âœ… Target repo already exists." | tee -a "$LOG_FILE"
fi

# ==== Run copy ====
echo "ðŸš€ Starting restic snapshot copy from $LOCAL_REPO to $PCLOUD_REPO"
echo "[$(date)] Starting restic copy..." >>"$LOG_FILE"

restic -r "$PCLOUD_REPO" copy --from-repo "$LOCAL_REPO" >>"$LOG_FILE" 2>&1

RETVAL=$?

if [[ $RETVAL -eq 0 ]]; then
  echo "âœ… Restic snapshots successfully copied to pCloud."
  echo "[$(date)] âœ… Copy successful." >>"$LOG_FILE"
else
  echo "âŒ Restic copy failed. Check $LOG_FILE for details."
  echo "[$(date)] âŒ Copy failed with exit code $RETVAL." >>"$LOG_FILE"
fi

exit $RETVAL
